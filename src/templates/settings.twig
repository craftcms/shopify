{% import "_includes/forms" as forms %}

{{ forms.autoSuggestField({
    first: true,
    label: "Api Key"|t('shopify'),
    name: 'apiKey',
    value: settings.apiKey,
    required: true,
    suggestEnvVars: true
}) }}

{{ forms.autoSuggestField({
    label: "Password"|t('shopify'),
    name: 'password',
    value: settings.password,
    required: true,
    suggestEnvVars: true
}) }}

{{ forms.autoSuggestField({
    label: "Shared Secret"|t('shopify'),
    name: 'secret',
    value: settings.secret,
    required: true,
    suggestEnvVars: true
}) }}

{{ forms.autoSuggestField({
    label: "Hostname"|t('shopify'),
    name: 'hostname',
    value: settings.hostname,
    required: true,
    placeholder: 'Your shopify domain, for example: yourdomain.com or yourshopifydomain.myshopify.com'|t('shopify'),
    errors: settings.getErrors('hostname')
}) }}

{{ forms.autoSuggestField({
    label: "Limit"|t('shopify'),
    name: 'limit',
    value: settings.limit,
    required: false,
    placeholder: 'API return limit, default is 50. Maximum is 250.'|t('shopify'),
    errors: settings.getErrors('limit')
}) }}

{{ forms.autoSuggestField({
    label: "Published Status"|t('shopify'),
    name: 'published_status',
    value: settings.published_status,
    required: false,
    placeholder: 'The published status for products in the default field. Default is "any". Other choices are: published, unpublished'|t('shopify'),
    errors: settings.getErrors('published_status')
}) }}
